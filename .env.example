# DNS Proxy Configuration
# Copy this file to .env and adjust values as needed

# DNS server settings
DNS_PORT=53                                    # DNS server port (default: 53)
UPSTREAM_DNS_URL=https://8.8.8.8/resolve       # Upstream DoH service

# Cache settings
CACHE_SIZE=1000                               # Maximum cache entries
CACHE_TTL=300                                 # Default TTL in seconds

# Logging settings
LOG_LEVEL=INFO                                # Log level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=logs/dns-proxy.log                  # Log file path

# Upstream service settings
UPSTREAM_TIMEOUT_CONNECT=5                    # Connection timeout (seconds)
UPSTREAM_TIMEOUT_READ=10                      # Read timeout (seconds)
UPSTREAM_RETRY_ATTEMPTS=3                     # Retry attempts

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5          # Failures before opening circuit
CIRCUIT_BREAKER_TIMEOUT=30                   # Circuit breaker timeout (seconds)

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false                     # Enable rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60           # Requests per minute per IP